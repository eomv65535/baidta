<%= render "/layouts/header2_index" %>
<%= render 'camaleon_cms/flash_messages' %>   
<div class="container intranet-top">    
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="<%= cama_myprofile_path %>"><%= t("mi_area")%></a></li>
            <li class="breadcrumb-item"><a href="<%= cama_misoportunidades_path %>"><%= t("misoportunidades")%></a></li>
            <li class="breadcrumb-item active" aria-current="page">Solicitar</li>
        </ol>
    </nav>
      
    <div class="container">        
        <div class="fondo-form">
            <div class="registration-form">                   
                <h3>Solicitud</h3>                                
                <br>
                 <%= form_tag(plugins_microem_oinscribirse_url, method: :post, :multipart => true) do %>  
               
                <input type="hidden" name="opotipo" id="opotipo" value="programabonos">
            <div class="form-group " >      
               <label for="servicio">Nombre</label>  
               <input name="nombre" type="text" class="form-control item" placeholder="Nombre" value="<%= raw @user.first_name + ' ' + @user.last_name%>" required>
            </div>
            <div class="form-group ">  
               <label for="servicio"><%=I18n.t('camaleon_cms.admin.table.e_mail')%></label>      
               <input name="email" type="email" class="form-control item" placeholder="<%=I18n.t('camaleon_cms.admin.table.e_mail')%>" value="<%= raw @user.email%>" readonly>
            </div>
            <div class="form-group ">
               <label for="servicio"><%= t('telf')%></label>        
               <input name="telf" type="tel" class="form-control item" placeholder="<%= t('telf')%>" value="<%= raw @user.telf%>">
            </div>
            <div class="form-group ">     
               <label for="servicio"><%= t('empresax')%></label>   
               <input name="empresa" type="text" class="form-control item" placeholder="<%= t('empresax')%>" value="<%= raw @miempresa["title"].translate('es')%>" required>
            </div>
            <div class="form-group ">     
               <label for="servicio">CIF</label>  
               <input name="cif" type="text" class="form-control item"  placeholder="CIF" value="<%= raw @miempresa.get_field("cif")%>" required>
            </div>
            <div class="form-group ">   
               <label for="servicio">CNAE</label>   
                <input name="cnae" type="text" class="form-control item"  placeholder="CNAE" value="<%= raw @miempresa.get_field("cnae")%>" required>
            </div>
            <div class="form-group "> 
               <label for="servicio">Titulo del proyecto</label>      
                <input name="tituloproy" type="text" class="form-control item"  placeholder="Titulo del proyecto" value="" required>
            </div>
            <div class="form-group">
                <label for="servicio">Servicio</label>     
                 <p><input name="servicio" type="radio" value="1" class="" checked> Tipo A </p>
                 <p><input name="servicio" type="radio" value="2" class=""> Tipo B </p>
            </div>
           <div class="form-group ">     
                 <label for="servicio">Responsable del proyecto</label> 
                <input name="responsable" type="text" class="form-control item"  placeholder="Responsable del proyecto" value="" required>
            </div>
           <div class="form-group ">     
                 <label for="servicio">Plantilla de la propuesta</label> 
                <input class="form-control" required="required" type="file" name="docpropuesta" id="docpropuesta" accept=".doc, .docx, .pdf">
            </div>
         <div class="text-right">
               <button type="submit" class="btn btn-block create-account"><%= t("camaleon_cms.common.register")%></button>
            </div>
                <% end %>              
            </div>
        </div>
    </div>
</div>
<%= render "layouts/footer2" %>