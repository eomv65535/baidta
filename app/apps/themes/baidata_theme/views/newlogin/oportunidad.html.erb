                <time datetime="2023"></time>
                <div class="timeline-experience">
                  <span class="timeline-circle"></span>
                  <div class="timeline-experience-info clear-after">
                    <h5>Enero</h5>
                    <div class="timeline-role">Fecha de inicio del programa</div>
                    <p>01/01/2023</p>
                  </div>
                </div>
                <time datetime="2023"></time>
                <div class="timeline-experience">
                  <span class="timeline-circle"></span>
                  <div class="timeline-experience-info clear-after">
                    <h5>Febrero</h5>
                    <div class="timeline-role">Fecha de cierre de recepción de solicitudes</div>
                    <p>07/03/2023, a las 17:00 CET</p>
                  </div>
                </div>
              </div>
              <div class="timeline-year timeline-year1">
                <time datetime="2023"></time>
                <div class="timeline-experience">
                  <span class="timeline-circle"></span>
                  <div class="timeline-experience-info clear-after">
                    <h5>Marzo</h5>
                    <div class="timeline-role">Comunicación de los resultados y firma de contratos</div>
                    <p>01 - 15 de Marzo</p>
                  </div>
                </div>
              </div>
              <div class="timeline-year timeline-year1">
                <time datetime="2023"></time>
                <div class="timeline-experience">
                  <span class="timeline-circle"></span>
                  <div class="timeline-experience-info clear-after">
                    <h5>Marzo - Junio</h5>
                    <div class="timeline-role">Ejecución de los proyectos</div>
                    <p>01 Marzo - 30 Junio</p>
                  </div>
                </div>
              </div>
              <div class="timeline-year timeline-year1">
                <time datetime="2023"></time>
                <div class="timeline-experience">
                  <span class="timeline-circle"></span>
                  <div class="timeline-experience-info clear-after">
                    <h5>Julio</h5>
                    <div class="timeline-role">Seguimiento y control final</div>
                    <p>01 - 15 Julio</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
  </section>
